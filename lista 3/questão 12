int main()

{

    int aux1, num;



    printf("Digite um numero diferente de zero: ");

    scanf("%d",&num);

    num=aux1;



    while(num!=0)

    {

        printf("Digite um numero diferente de zero: ");

        scanf("%d",&num);



        if(num>aux1)

        {

            aux1=num;

        }

    }



    printf("O maior numero e: %d",aux1);



    return 0;

}

